<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.minhtu.firebaseproject.Register_Activity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo_two"
        />

    <EditText
        android:id="@+id/activity_register_userName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:background="@color/colorPrimary"
        android:hint="Please enter your name"
        />

    <EditText
        android:id="@+id/activity_register_userEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_email"
        android:drawableStart="@mipmap/ic_email"/>

    <Button
        android:id="@+id/activity_register_registerButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Register an account"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        />
    <Button
        android:id="@+id/activity_register_signinButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Back to Sign In"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>

</LinearLayout>
