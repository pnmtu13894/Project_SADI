<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo_two"
        />

    <EditText
        android:id="@+id/activity_main_userEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:background="@color/colorPrimary"
        android:hint="Email"
        android:drawableLeft="@mipmap/ic_email"
        android:drawableStart="@mipmap/ic_email"
        />

    <EditText
        android:id="@+id/activity_main_userPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_lock"
        android:drawableStart="@mipmap/ic_lock"/>

    <Button
        android:id="@+id/activity_login_loginButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        />
    <Button
        android:id="@+id/activity_login_registerButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Sign Up for an account"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</LinearLayout>
